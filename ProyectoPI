 <script>
 /*La barrita del menu*/
$(document).ready(main);

var cambios = true;

function main (){
    $('.menu_bar').click(function(){
     // $('nav').toggle(

       if(cambios)
        {
          $('nav').animate({
            left: '0'
          });
         cambios = false;
       } else {
         cambios = true;
          $('nav').animate({
            left: '-100%'
           });
       }
     });
 }

//Mostrar menu despues del scroll

$(document).ready(function(){
	var altura = $('.menu').offset().top;
	
	$(window).on('scroll', function(){
		if ( $(window).scrollTop() > altura ){
       
        $('.menu').addClass('menu-fixed').animate(); 
          
		} else {
			$('.menu').fadeIn('slow',function(){
        $('.menu').removeClass('menu-fixed');
      });      
		}
	});
 
});

//Zoom imagenes

$('#reuniones1').click(function(){
  if(cambios){
      $(this).animate ({width:"100%", textAlign:"center", margin:"10px 0 0 0"},1000, 
        function(){
          $(this).css("border","10px #4b3621 solid");
  })
  cambios = false;
  } else {
    $(this).animate ({
      width:"300px", textAlign:"left", margin:"35px 35px 35px 50px"
        },1000, function(){
          $(this).css("border","none");
  })
  cambios = true;
  }
})

$('#reuniones2').click(function(){
  if(cambios){
      $(this).animate ({width:"100%", textAlign:"center", margin:"10px 0 0 0"},1000, 
        function(){
          $(this).css("border","10px #4b3621 solid");
  })
  cambios = false;
  } else {
    $(this).animate ({
      width:"300px", textAlign:"left", margin:"35px 35px 35px 50px"
        },1000, function(){
          $(this).css("border","none");
  })
  cambios = true;
  }
})

//Frame Facebook


 </script>

